{
  "name": "peaks.js",
  "version": "0.26.0",
  "description": "JavaScript UI component for displaying audio waveforms",
  "main": "./peaks.js",
  "module": "./src/main.js",
  "types": "./peaks.js.d.ts",
  "files": [
    "peaks.js",
    "peaks.js.d.ts",
    "src"
  ],
  "contributors": [
    "Chris Finch (https://github.com/chrisfinch)",
    "Thomas Parisot (https://github.com/oncletom)",
    "Chris Needham (https://github.com/chrisn)"
  ],
  "keywords": [
    "audio",
    "visualisation",
    "bbc",
    "webaudio",
    "browser",
    "interactive",
    "waveform"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/bbc/peaks.js.git"
  },
  "license": "LGPL-3.0",
  "engines": {
    "node": ">= 8.11.2"
  },
  "scripts": {
    "prebuild": "npm run lint",
    "build": "rollup --config --sourcemap",
    "postbuild": "copyfiles peaks.js peaks.js.map demo",
    "doc": "jsdoc --private --destination docs --recurse src",
    "lint": "eslint src/*.js test/**/*.js test/*.js karma.conf.js",
    "pretest": "npm run build",
    "test": "karma start",
    "test-watch": "npm test -- --auto-watch --no-single-run",
    "copy-demo-files": "copyfiles --up 1 test_data/sample.mp3 test_data/07023003.mp3 test_data/07023003-2channel.dat demo",
    "prestart": "npm run build && npm run copy-demo-files",
    "start": "serve --listen 8080 --no-clipboard demo",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "chai": "~4.3.4",
    "copyfiles": "~2.4.1",
    "eslint": "~7.28.0",
    "jsdoc": "~3.6.7",
    "karma": "~6.3.3",
    "karma-browserstack-launcher": "~1.6.0",
    "karma-chai-sinon": "~0.1.5",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-firefox-launcher": "~2.1.1",
    "karma-html2js-preprocessor": "~1.1.0",
    "karma-mocha": "~2.0.1",
    "karma-rollup-preprocessor": "^7.0.7",
    "karma-safari-launcher": "~1.0.0",
    "karma-spec-reporter": "~0.0.32",
    "mocha": "~9.0.0",
    "rollup": "^2.51.2",
    "rollup-plugin-istanbul": "^3.0.0",
    "serve": "~12.0.0",
    "sinon": "~11.1.1",
    "sinon-chai": "~3.7.0"
  },
  "dependencies": {
    "eventemitter3": "~4.0.7",
    "konva": "^8.0.4",
    "waveform-data": "~4.1.0"
  }
}
